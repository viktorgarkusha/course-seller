function enableNext() {
    var element = document.getElementById("NextPage");
    element.classList.add("button-containerNextEnabled");
    element.disabled = false;
}

function enableSubmit() {
    var element = document.getElementById("NextPage");
    element.classList.add("button-containerNextEnabled");
    element.disabled = false;
}

function showInfo() {
    if(event.target.value === 'false'){
      document.getElementById('InfoforNo').style.display = 'block';
      document.getElementById('videoId').style.display = 'block';
    }else{
      document.getElementById('InfoforNo').style.display = 'none'; 
      document.getElementById('videoId').style.display = 'none';
    }
}

function checkAll(){          
    if(event.target.value === 'whyAllCheck'){ 
        if(event.target.checked){
            var selects = document.querySelectorAll("input[type='checkbox']");           
            for(var i=0; i<selects.length; i++)
            {
                selects[i].checked = true;
            }
        }                           
    }
}

function unCheckAll(){      
    var unSelect = document.getElementById('whyAllCheck');           
    unSelect.checked = false;
}

function disableCheck(){      
    if(event.target.value === 'whereBuildCheck'){ 
        if(event.target.checked){
            var disableCheckBox = document.getElementById('whereOfferCheck');
            disableCheckBox.disabled = true;
        }else{
            var disableCheckBox = document.getElementById('whereOfferCheck');
            disableCheckBox.disabled = false;
        }
    }else if(event.target.value === 'whereOfferCheck'){
        if(event.target.checked){
            var disableCheckBox = document.getElementById('whereBuildCheck');
            disableCheckBox.disabled = true;
        }else{
            var disableCheckBox = document.getElementById('whereBuildCheck');
            disableCheckBox.disabled = false;
        }
    }
}


function validate(){
    var valid = false;
    let fname = document.getElementById('registerWhoFirstNameInput').value;
    if(!fname){
        document.getElementById('registerWhoFirstName').classList.remove('slds-hide-error');
        document.getElementById('registerWhoFirstName').classList.add('slds-has-error');
        valid = false;
    }
    let lname = document.getElementById('registerWhoLastNameInput').value;
    if(!lname){
        document.getElementById('registerWhoLastName').classList.remove('slds-hide-error');
        document.getElementById('registerWhoLastName').classList.add('slds-has-error');
        valid = false;
    }
    let email = document.getElementById('registerWhoEmailInput').value;
    if(!email){
        document.getElementById('registerWhoEmail').classList.remove('slds-hide-error');
        document.getElementById('registerWhoEmail').classList.add('slds-has-error');
        valid = false;
    }
    return valid;
}